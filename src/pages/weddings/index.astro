---
import BaseLayout from "../../layouts/BaseLayout.astro";

/*
  List the weddings you want to publish here.
  "slug" must match the JSON filename in: public/weddings/data/<slug>.json
*/
const weddings = [
  { slug: "friend-a", label: "Friend A" },
  { slug: "friend-b", label: "Friend B" }
];
---

<BaseLayout title="Weddings" description="Wedding invitation pages.">
  <div class="mx-auto max-w-3xl px-4 py-10">
    <h1 class="text-3xl font-bold text-neutral-900 dark:text-white">Wedding Invitations</h1>
    <p class="mt-2 text-neutral-600 dark:text-neutral-400">Select an invitation:</p>

    <div class="mt-6 grid gap-4">
      {weddings.map((w) => (
        <a
          class="rounded-2xl border p-5 transition hover:shadow-sm dark:border-neutral-800"
          href={`/weddings/${w.slug}/`}
        >
          <div class="text-lg font-semibold text-neutral-900 dark:text-white">{w.label}</div>
          <div class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">/weddings/{w.slug}/</div>
        </a>
      ))}
    </div>

    <div class="mt-10 rounded-2xl border p-5 text-sm text-neutral-600 dark:border-neutral-800 dark:text-neutral-400">
      Tip: share the direct wedding link. Guests will be asked for a password before viewing details.
    </div>
  </div>
</BaseLayout>
