---
import BaseLayout from "../../layouts/BaseLayout.astro";
const demosUrl = "https://demos.jiteshgosar.com";
---
<BaseLayout title="Demos">
  <main class="mx-auto max-w-3xl px-4 py-12">
    <h1 class="text-3xl font-semibold">Demos</h1>
    <p class="mt-4 text-base leading-7 text-neutral-700 dark:text-neutral-300">
      Demos live on a separate subdomain:
      <a class="underline" href={demosUrl} target="_blank" rel="noreferrer">{demosUrl}</a>
    </p>
  </main>
</BaseLayout>
