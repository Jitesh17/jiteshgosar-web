---
type TocItem = { depth: number; slug: string; text: string };
const { headings = [] as TocItem[], minHeadings = 2 } = Astro.props;

const show = headings.length >= minHeadings;
---
{show && (
  <aside class="fixed left-4 top-24 z-40 w-72">
    <div id="tocBox" class="opacity-0 translate-x-0 transition-all duration-300">
      <div class="rounded-2xl border border-neutral-200 bg-white/90 p-4 shadow-sm backdrop-blur dark:border-neutral-800 dark:bg-neutral-950/80">
        <div class="flex items-center justify-between">
          <div class="text-sm font-semibold text-neutral-900 dark:text-white">Table of Contents</div>
          <button id="tocClose" class="rounded-lg px-2 py-1 text-xs text-neutral-600 hover:bg-neutral-100 dark:text-neutral-400 dark:hover:bg-neutral-900">
            Ã—
          </button>
        </div>

        <nav class="mt-3">
          <ul class="space-y-2 text-sm">
            {headings.map((h) => (
              <li class={h.depth >= 3 ? "ml-3" : ""}>
                <a class="text-neutral-700 hover:text-neutral-900 dark:text-neutral-300 dark:hover:text-white"
                   href={`#${h.slug}`}>
                  {h.text}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </div>
  </aside>

  <script is:inline>
    const box = document.getElementById("tocBox");
    const closeBtn = document.getElementById("tocClose");

    const showAfter = 120;
    const update = () => {
      const y = window.scrollY || document.documentElement.scrollTop;
      const shouldShow = y > showAfter;
      box.style.opacity = shouldShow ? "1" : "0";
      box.style.transform = shouldShow ? "translateX(0)" : "translateX(-8px)";
      box.style.pointerEvents = shouldShow ? "auto" : "none";
    };

    closeBtn.addEventListener("click", () => {
      box.style.opacity = "0";
      box.style.transform = "translateX(-8px)";
      box.style.pointerEvents = "none";
    });

    window.addEventListener("scroll", update, { passive: true });
    update();
  </script>
)}
